<%= form_tag recipes_path do %>
  <%= text_field_tag "recipe_form[name]", placeholder: "Title of Recipe"%>
  <%= text_field_tag "recipe_form[servings]", placeholder: "Number of Servings" %>
  <%= text_area_tag "recipe_form[description]", placeholder: "Description of Recipe" %>
  <%= text_area_tag "recipe_form[preparation]", placeholder: "Directions" %>
  <%= submit_tag %>
<% end %>


<%= form_for @usage do |f| %>
  <%=f.text_field :amount, placeholder: "Amount (e.g 8)"%>
  <%=f.text_field :unit, placeholder: "Unit (e.g. Ounces)" %>
  <%=f.text_field :format, placeholder: "Format (e.g. Chopped)" %>
<% end %>
