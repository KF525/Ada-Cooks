<% provide(:title, "Create Recipe") %>
<div class="form-group">
  <%= form_tag recipes_path do %>
  <div class="col-md-12">
    <h1>Create Recipe</h1>
    <%= text_field_tag "recipe_form[title]", nil, placeholder: "Title of Recipe", class: "form-control" %>

    <%= number_field_tag "recipe_form[servings]", nil, placeholder: "Number of Servings", class: "form-control" %>

    <%= text_area_tag "recipe_form[description]", nil, placeholder: "Short Description", class: "form-control" %>
</div>

<div class="table-responsive">
  <table class="col-md-12 table-condensed">
    <% @ingredients.each do |ingredient|%>
    <tr>
      <td class="col-md-3">
        <%= check_box_tag "recipe_form[usages][#{ingredient.id}][checked]", true %>
        <%= label_tag "recipe_form[usages]", ingredient.name %>
      </td>
      <td class="col-md-3">
        <%= number_field_tag "recipe_form[usages][#{ingredient.id}][amount]", 0 %>
      </td>
      <td class="col-md-3">
        <%= text_field_tag "recipe_form[usages][#{ingredient.id}][unit]", nil, placeholder: "unit of measurement" %>
      </td>
      <td class="col-md-3">
        <%= text_field_tag "recipe_form[usages][#{ingredient.id}][format]", nil, placeholder: "prep (e.g. chopped)" %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

  <div class="col-md-12">
    <%= text_area_tag "recipe_form[preparation]", nil, placeholder: "Directions (Step 1, Step 2..)", class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= submit_tag "Create Recipe", class: "form-control submit" %>
  </div>
  <% end %>
</div>

<!-- FIND A WAY TO DO THIS AND REDIRECT WITHOUT LOSING CONTENT ON THE PAGE? -->
<hr>
<div class="col-md-12">
  <h1>Add ingredient</h1>
  <%= form_for @ingredient do |f| %>
  <%=f.text_field :name, placeholder: "Name of Ingredient", class: "form-control"%>
  <%=f.text_area :description, placeholder: "Description of Ingredient", class: "form-control" %>
  <%= f.submit "Add Ingredient", class: "form-control submit"%>
<% end %>
</div>
